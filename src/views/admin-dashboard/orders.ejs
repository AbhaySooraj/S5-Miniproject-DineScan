<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/admin-dashboard.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    <title>Admin Dashboard</title>
  </head>
  <body>
    <section id="main-body">
      <ul class="menu-items">
        <li id="overview" class="menu-item selected"><span class="material-symbols-outlined">grid_view</span><a href="/admin-dashboard/overview"><span class="list-item">Overview</span></a></li>
        <li id="access-control" class="menu-item"><span class="material-symbols-outlined">accessibility</span><a href="/admin-dashboard/access-control"><span class="list-item">Access control</span></a></li>
        <li id="transactions" class="menu-item"><span class="material-symbols-outlined">receipt_long</span><a href="/admin-dashboard/transactions"><span class="list-item">Transactions</span></a></li>
        <li id="orders" class="menu-item" style="opacity: 1;"><span class="material-symbols-outlined">orders</span><a href="/admin-dashboard/orders"><span class="list-item">Orders</span></a></li>
        <li id="report" class="menu-item"><span class="material-symbols-outlined">lab_profile</span><a href="/admin-dashboard/report"><span class="list-item">Report</span></a></li>
        <span class="divider"></span>
        <li id="settings" class="menu-item"><span class="material-symbols-outlined">Settings</span><a href="/admin-dashboard/settings"><span class="list-item">Settings</span></a></li>
      </ul>
      <div class="border-content">
        <div class="content">
          <div class="task-bar">
            <div class="welcome">
              <span style="font-size: 32px; font-weight: 500;">Welcome back, Mike</span><br>
              <span style="font-size: 15px;">Here's whats happening at the store today</span>
            </div>
            <div class="profile">
              <img id="profile-img" src="/public/images/default.jpg" alt="profile image">
              <button id="profile-button">Mike Oxlong</button>
              <span class="material-symbols-outlined" style="color:black;">arrow_drop_down</span>
              <div class="dropdown-content" id="dropdown-content">
                <a href="#">
                  <div class="logout-container">
                    <span class="material-symbols-outlined">person</span>
                    <span class="list-item">Profile</span>
                  </div>
                </a>
                <a href="#">
                  <div class="logout-container">
                    <span class="material-symbols-outlined">logout</span>
                    <span class="list-item">Logout</span>
                  </div>
                </a>
              </div>
            </div>
          </div>
          <div class="main-content">

          </div>
        </div>
      </div>
    </section>
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const borderContent = document.querySelector('.content');
        borderContent.style.opacity = '1';
      });
      
      document.addEventListener('DOMContentLoaded', function () {
        const borderContent = document.querySelector('.content');
        borderContent.style.opacity = '1';
      
        const profileButton = document.getElementById('profile-button');
        const dropdownContent = document.getElementById('dropdown-content');
      
        function toggleDropdown() {
          dropdownContent.classList.toggle('show');
        }
      
        // Show/hide dropdown when clicking the profile button
        profileButton.addEventListener('click', toggleDropdown);
      
        // Hide dropdown if the user clicks outside of it
        document.addEventListener('click', function (event) {
          if (!event.target.matches('#profile-button')) {
            if (dropdownContent.classList.contains('show')) {
              dropdownContent.classList.remove('show');
            }
          }
        });
      });
      
    </script>
  </body>
</html>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: #172233;
            color: #ffffff;
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            overflow: hidden;
            transition: background 0.5s ease, color 0.5s ease;
        }

        .login-container {
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            max-width: 350px;
            padding: 30px;
            box-sizing: border-box;
            transition: background 0.5s ease, box-shadow 0.5s ease, transform 0.5s ease;
            transform-origin: center;
        }

        h2 {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            font-size: 28px;
            color: #16161d;
            margin-bottom: 20px;
            transition: color 0.5s ease;
        }

        label {
            display: block;
            margin: 15px 0 5px;
            color: #555;
            transition: color 0.5s ease;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 16px; /* Increased input text size */
            margin: 5px 0 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            transition: border-color 0.5s ease;
        }

        input[type="submit"] {
            background: #3498db;
            color: #ffffff;
            padding: 12px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.5s ease;
        }

        input[type="submit"]:hover {
            background: #2980b9;
        }

        p {
            margin-top: 20px;
            color: #555;
            transition: color 0.5s ease;
        }

        a {
            color: #3498db;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.5s ease;
        }

        a:hover {
            color: #2980b9;
        }

        #passwordError {
            color: #FF0000;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Admin Login</h2>
        <form class="admin-login" id="adminLoginForm" onsubmit="return validateUsername()" method="post">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required style="font-size: medium">

            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required style="font-size: medium">
            <!-- Display error message for password -->
            <div id="usernameError"></div>

            <input type="submit" value="Login" style="font-size: medium;">
        </form>
        <p>Not an admin? <a href="/home">Go back to the homepage</a></p>
    </div>

    <script>
        function validateUsername() {
            // Get the password input element
            var userInput = document.getElementById('username');
            // Get the entered password
            var username = userInput.value;
    
            // Define the regex pattern for the password
            var usernamePattern = /^[A-Za-z][A-Za-z0-9_]*$/;
    
            // Check if the password matches the pattern
            if (!usernamePattern.test(username)) {
                // If not, display an error message
                document.getElementById('usernameError').innerHTML = 'Username does not match our records';
                return false; // Prevent form submission
            } else {
                // Clear any previous error message
                document.getElementById('usernameError').innerHTML = '';
                return true; // Allow form submission
            }
        }
    </script>
</body>
</html>
